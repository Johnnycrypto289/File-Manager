{
  "name": "Invoice Payment Reminder",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "days",
              "minutesInterval": 1440
            }
          ]
        }
      },
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [
        250,
        300
      ]
    },
    {
      "parameters": {
        "values": {
          "string": [
            {
              "name": "apiKey",
              "value": "YOUR_API_KEY_HERE"
            }
          ]
        },
        "options": {}
      },
      "name": "Set API Key",
      "type": "n8n-nodes-base.set",
      "typeVersion": 1,
      "position": [
        450,
        300
      ]
    },
    {
      "parameters": {
        "authentication": "headerAuth",
        "url": "=https://your-xero-cfo-assistant-url.com/api/n8n/invoices/overdue",
        "options": {
          "fullResponse": true
        },
        "headerParametersUi": {
          "parameter": [
            {
              "name": "Authorization",
              "value": "Bearer {{$node[\"Set API Key\"].json[\"apiKey\"]}}"
            }
          ]
        }
      },
      "name": "Get Overdue Invoices",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        650,
        300
      ]
    },
    {
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{$node[\"Get Overdue Invoices\"].json[\"data\"][\"total\"]}}",
              "operation": "larger",
              "value2": 0
            }
          ]
        }
      },
      "name": "IF Overdue Invoices Exist",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [
        850,
        300
      ]
    },
    {
      "parameters": {
        "mode": "splitInBatches",
        "sourceData": "={{$node[\"Get Overdue Invoices\"].json[\"data\"][\"byContact\"]}}",
        "options": {}
      },
      "name": "Split By Contact",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 1,
      "position": [
        1050,
        200
      ]
    },
    {
      "parameters": {
        "authentication": "headerAuth",
        "url": "=https://your-xero-cfo-assistant-url.com/api/n8n/contacts/{{$node[\"Split By Contact\"].json[\"contact\"][\"contactID\"]}}/payment-reminder",
        "options": {
          "fullResponse": true
        },
        "headerParametersUi": {
          "parameter": [
            {
              "name": "Authorization",
              "value": "Bearer {{$node[\"Set API Key\"].json[\"apiKey\"]}}"
            }
          ]
        }
      },
      "name": "Generate Payment Reminder",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        1250,
        200
      ]
    },
    {
      "parameters": {
        "authentication": "headerAuth",
        "url": "=https://your-xero-cfo-assistant-url.com/api/n8n/contacts/{{$node[\"Split By Contact\"].json[\"contact\"][\"contactID\"]}}/payment-reminder",
        "method": "POST",
        "options": {
          "fullResponse": true
        },
        "headerParametersUi": {
          "parameter": [
            {
              "name": "Authorization",
              "value": "Bearer {{$node[\"Set API Key\"].json[\"apiKey\"]}}"
            }
          ]
        },
        "bodyParametersUi": {
          "parameter": [
            {
              "name": "emailAddress",
              "value": "={{$node[\"Generate Payment Reminder\"].json[\"data\"][\"emailAddress\"]}}"
            },
            {
              "name": "subject",
              "value": "={{$node[\"Generate Payment Reminder\"].json[\"data\"][\"subject\"]}}"
            },
            {
              "name": "message",
              "value": "={{$node[\"Generate Payment Reminder\"].json[\"data\"][\"message\"]}}"
            }
          ]
        }
      },
      "name": "Send Payment Reminder",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [
        1450,
        200
      ]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK_URL",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "options": {},
